{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts", "dist/**/*.ts"],
    "format": "verbose"
  },
  "rules": {
    "interface-name": [true, "never-prefix"],
    "whitespace": [true, "check-module"],
    "curly": true,
    "no-console": false,
    "no-require-imports": true
  }
}
