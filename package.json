{
  "name": "medea",
  "version": "1.0.0",
  "description": "Node command line utilities library",
  "main": "dist/index.js",
  "homepage": "https://github.com/bakuzan/medea#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bakuzan/medea"
  },
  "files": [
    "dist/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "scripts": {
    "build": "tsc",
    "docs": "typedoc --out docs ./src --mode file",
    "pre-commit": "npm run tslint && npm run pretty",
    "pretty": "prettier --write \"{,!(node_modules|dist|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "tslint": "tslint --project tsconfig.json --fix"
  },
  "types": "dist/src/index.d.ts",
  "author": "bakuzan",
  "license": "ISC",
  "devDependencies": {
    "husky": "^2.4.1",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "minimist": "^1.2.0",
    "prettier": "^1.18.2"
  }
}
